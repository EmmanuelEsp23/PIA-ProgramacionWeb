
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - Dashboard</title>
     <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
     <link rel="stylesheet" href="~/css/_DashboardLayout.css" />
</head>
<body>
    <header>
        <!-- Aquí puedes agregar la barra de navegación del dashboard -->     

      <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-controller="Dashboard" asp-action="Dashboard">Dashboard</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1 d-flex justify-content-between">
                <li class="nav-item">
                    <a class="nav-link text-light" asp-area="" asp-controller="Dashboard" asp-action="Index">Gestión de Peliculas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" asp-area="" asp-controller="Dashboard" asp-action="Privacy">Gestión de Categorías</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" asp-area="" asp-controller="Dashboard" asp-action="Privacy">Comentarios</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" asp-area="" asp-controller="Dashboard" asp-action="Privacy">Estadísticas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" asp-area="" asp-controller="Dashboard" asp-action="Privacy">Agregar administrador</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light" asp-area="" asp-controller="Dashboard" asp-action="Privacy">Mi perfil</a>
                </li>
            </ul>
            <partial name="_LoginPartial" />
        </div>
    </div>
</nav>

     </header>

    <div class="container"> 
        @RenderBody() 
    </div>
    <footer>
        <p>&copy; 2024 - Tu Sitio</p>
    </footer>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
   
</body>
</html>



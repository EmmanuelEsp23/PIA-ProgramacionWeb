@{
    ViewData["Title"] = "Gestión de Administración y Privilegios";
}
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h3>Gestion de Administradores</h3>

<!-- Formulario para buscar usuarios -->
<form method="get" asp-action="BuscarUsuarios">
    <div class="form-group">
        <label for="busqueda">Buscar usuarios:</label>
        <input type="text" id="busqueda" name="query" class="form-control" placeholder="Nombre, Apellido o Email">
        <button type="submit" class="btn btn-primary mt-2">Buscar</button>
    </div>
</form>

<hr>

<!-- Tabla de Administradores -->
<h3>Administradores</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
       
    </tbody>
</table>

<!-- Botón para agregar administrador -->
<button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalAgregar">Agregar Administrador</button>

<hr>

<!-- Tabla de Usuarios Normales -->
<h3>Usuarios Normales</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
     
    </tbody>
</table>

<!-- Modal Agregar Administrador -->
<div class="modal fade" id="modalAgregar" tabindex="-1" aria-labelledby="modalAgregarLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-action="AgregarAdministrador">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalAgregarLabel">Agregar Administrador</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="nombre">Nombre:</label>
                        <input type="text" id="nombre" name="Nombre" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="apellidos">Apellidos:</label>
                        <input type="text" id="apellidos" name="Apellidos" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" id="email" name="Email" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="telefono">Teléfono:</label>
                        <input type="text" id="telefono" name="Tel" class="form-control">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>



@model PIA_PWEB.Models.ViewModels.GestionPeliViewModel

@{
    ViewData["Title"] = "Agregar Pelicula";
}

<h2>Agregar Película</h2>

<form asp-controller="Peliculas" asp-action="AgregarPelicula" method="post" enctype="multipart/form-data" novalidate>
    <div class="mb-3">
        <label asp-for="NombrePelicula" class="form-label"></label>
        <input asp-for="NombrePelicula" class="form-control" required />
    </div>
    <div class="mb-3">
        <label asp-for="FechaLanzamiento" class="form-label"></label>
        <input asp-for="FechaLanzamiento" type="date" class="form-control" required />
    </div>
    <div class="mb-3">
        <label asp-for="Director" class="form-label"></label>
        <input asp-for="Director" class="form-control" required />
    </div>
    <div class="mb-3">
        <label asp-for="IdCategoria" class="form-label"></label>
        <select asp-for="IdCategoria" class="form-select">
            @foreach (var categoria in ViewBag.Categorias)
            {
                <option value="@categoria.IdCategoria">@categoria.NombreCategoria</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <textarea asp-for="Descripcion" class="form-control" required></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="IdStreaming" class="form-label"></label>
        <select asp-for="IdStreaming" class="form-select">
            @foreach (var streaming in ViewBag.Streamings)
            {
                <option value="@streaming.IdStreaming">@streaming.NombreStreaming</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="Portada" class="form-label"></label>
        <input asp-for="Portada" class="form-control" required />
    </div>
    <div class="mb-3">
        <label asp-for="IdUsuario" class="form-label"></label>
        <select asp-for="IdUsuario" class="form-select">
            @foreach (var user in ViewBag.Usuario)
            {
                <option value="@user.Id">@user.UserName</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-success">Agregar</button>
</form>

<script>
    document.querySelector('form').addEventListener('submit', function (e) {
        console.log('Formulario enviado manualmente');
    });
</script>
